{% extends 'base.html.twig' %}
    {% block title %}Accueil - TickMaster{% endblock %}
    {% block body %}
      <div class="text-center mt-5">
        <h1>Bienvenue sur TickMaster</h1>
        <p>Votre plateforme de gestion de tickets</p>
        {% if app.user %}
          <a href="{{ path('app_ticket_index') }}" class="btn btn-primary mt-3">Voir mes tickets</a>
        {% else %}
          <a href="{{ path('login') }}" class="btn btn-primary mt-3">Se connecter</a>
        {% endif %}
      </div>
    {% endblock %}